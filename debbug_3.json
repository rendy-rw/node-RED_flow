    {
        "id": "c8a8a4765d854f55",
        "type": "function",
        "z": "45a002da4b6da150",
        "name": "Chart Formatter",
        "func": "// CHART FORMATTER FINAL (FFT Fix & Mode Sync)\n\n// 1. Pastikan membaca mode dari GLOBAL (agar sinkron dengan Dropdown)\nvar mode = global.get('plot_mode') || \"TIME\";\nvar outputMsg = {};\n\n// Deklarasi Variabel\nvar labels = [];\nvar values = [];\nvar xLabel = \"\";\nvar color = \"\";\nvar legend = \"\";\n\n// --- SKENARIO 1: RESET / GANTI MODE ---\nif (msg.topic === \"mode\" || msg.topic === \"clear\") {\n    xLabel = (msg.payload === \"TIME\") ? \"Urutan Sampel\" : \"Frekuensi (Hz)\";\n    color = (msg.payload === \"TIME\") ? \"#1f77b4\" : \"#d62728\"; \n    legend = (msg.payload === \"TIME\") ? \"Gelombang Seismik\" : \"Spektrum Frekuensi\";\n    \n    outputMsg.topic = \"CONFIG_CHANGE\";\n    outputMsg.payload = {\n        labels: [], data: [], xLabel: xLabel, color: color, legend: legend\n    };\n    return outputMsg;\n}\n\n// --- SKENARIO 2: DATA FFT (REPLACE TOTAL) ---\n// Kriteria: Mode FFT DAN Topik Frequency Spectrum\nif (mode === \"FFT\" && msg.topic === \"Frequency Spectrum\") {\n    var fftInput = msg.payload; \n    \n    // FIX UTAMA: Handle Nested Array (Array di dalam Array)\n    // Debug Anda menunjukkan: array[1] -> index 0 berisi array data\n    var cleanData = [];\n    if (Array.isArray(fftInput) && fftInput.length > 0 && Array.isArray(fftInput[0])) {\n        cleanData = fftInput[0]; // Ambil array di dalamnya\n    } else {\n        cleanData = fftInput;\n    }\n\n    labels = [];\n    values = [];\n    \n    // Pisahkan X (Freq) dan Y (Amp)\n    for(var i=0; i<cleanData.length; i++) {\n        // Pastikan objek memiliki properti x dan y\n        if (cleanData[i].x !== undefined) {\n            labels.push(cleanData[i].x); // Sumbu X: Frekuensi\n            values.push(cleanData[i].y); // Sumbu Y: Amplitudo\n        }\n    }\n    \n    // Gunakan topik REPLACE agar grafik digambar ulang total\n    outputMsg.topic = \"REPLACE_DATA\";\n    outputMsg.payload = { labels: labels, data: values };\n    return outputMsg;\n}\n\n// --- SKENARIO 3: DATA TIME SERIES ---\nif (mode === \"TIME\") {\n    var inputData = msg.payload;\n    \n    if (Array.isArray(inputData)) {\n        \n        // KASUS A: Data History (Array of Objects)\n        if ((inputData.length > 0 && inputData[0].x !== undefined) || (Array.isArray(inputData[0]))) {\n             var hist = Array.isArray(inputData[0]) ? inputData[0] : inputData;\n             values = hist.map(function(d) { return d.y; });\n             \n             outputMsg.topic = \"REPLACE_DATA\";\n             outputMsg.payload = { data: values, isHistory: true };\n             return outputMsg;\n        }\n        \n        // KASUS B: Data Realtime (Array of Integers)\n        else {\n             var startIndex = msg.start_index; \n             if (startIndex === undefined) startIndex = 0;\n\n             labels = [];\n             values = inputData;\n\n             for(var i=0; i<inputData.length; i++) {\n                 labels.push(startIndex + i);\n             }\n\n             outputMsg.topic = \"APPEND_DATA\";\n             outputMsg.payload = { \n                 data: values,\n                 labels: labels \n             };\n             return outputMsg;\n        }\n    }\n}\n\nreturn null;",
