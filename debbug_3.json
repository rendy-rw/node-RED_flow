    {
        "id": "2300328d14f7eb7b",
        "type": "ui_template",
        "z": "45a002da4b6da150",
        "group": "grp_visual",
        "name": "Universal Chart (JS)",
        "order": 10,
        "width": 30,
        "height": 10,
        "format": "<script src=\"https://cdn.jsdelivr.net/npm/chart.js\"></script>\n<div style=\"position: relative; height: 100%; width: 100%; padding: 10px;\">\n    <canvas id=\"seismicChart\"></canvas>\n</div>\n\n<script>\n(function(scope) {\n    var myChart = null;\n    var globalCounter = 0; // Counter Sumbu X\n    var MAX_POINTS = 1000; // Lebar Jendela\n\n    function initChart(config) {\n        var ctx = document.getElementById('seismicChart').getContext('2d');\n        if (myChart) myChart.destroy();\n        \n        // Reset counter hanya saat Ganti Mode/Config\n        globalCounter = 0;\n\n        myChart = new Chart(ctx, {\n            type: 'line',\n            data: {\n                labels: [],\n                datasets: [{\n                    label: config.legend,\n                    data: [],\n                    borderColor: config.color,\n                    borderWidth: 1.5,\n                    pointRadius: 0, fill: false, tension: 0.1\n                }]\n            },\n            options: {\n                responsive: true, maintainAspectRatio: false, animation: false,\n                scales: {\n                    x: { title: { display: true, text: config.xLabel }, ticks: { maxTicksLimit: 10 } },\n                    y: { title: { display: true, text: 'Amplitudo' } }\n                }\n            }\n        });\n    }\n\n    scope.$watch('msg', function(msg) {\n        if (!msg) return;\n\n        if (msg.topic === \"CONFIG_CHANGE\") {\n            initChart(msg.payload);\n        } \n        \n        // --- LOGIKA REPLACE (History / FFT) ---\n        else if (myChart && msg.topic === \"REPLACE_DATA\") {\n            myChart.data.labels = msg.payload.labels;\n            myChart.data.datasets[0].data = msg.payload.data;\n            \n            // SYNC COUNTER: Set counter ke jumlah data terakhir\n            // Agar data realtime berikutnya melanjutkannya (misal mulai dari 501)\n            if (msg.payload.isHistory) {\n                globalCounter = msg.payload.data.length;\n            }\n            \n            myChart.update();\n        }\n        \n        // --- LOGIKA APPEND (Realtime) ---\n        else if (myChart && msg.topic === \"APPEND_DATA\") {\n            var newData = msg.payload.data;\n            \n            for (var i = 0; i < newData.length; i++) {\n                myChart.data.labels.push(globalCounter++); // Pakai counter yang sudah di-sync\n                myChart.data.datasets[0].data.push(newData[i]);\n            }\n            \n            var excess = myChart.data.labels.length - MAX_POINTS;\n            if (excess > 0) {\n                myChart.data.labels.splice(0, excess);\n                myChart.data.datasets[0].data.splice(0, excess);\n            }\n            myChart.update('none');\n        }\n    });\n})(scope);\n</script>",
